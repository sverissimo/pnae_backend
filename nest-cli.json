{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,

    "assets": [
      { "include": "../client/**", "outDir": "dist/client", "watchAssets": true },
      {"include": "@pdf-gen/*.html", "outDir": "dist", "watchAssets": true  },
      "@pdf-gen/*.png"
    ]
  }
}
