{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,

    "assets": [
      { "include": "../client/**", "outDir": "dist/client", "watchAssets": true },
      { "include": "@pdf-gen/**/*", "outDir": "dist", "watchAssets": true }
    ]
  }
}
